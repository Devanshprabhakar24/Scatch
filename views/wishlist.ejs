<%- include('./partials/header') %>

    <!-- Wishlist Section -->
    <div class="relative z-10 min-h-screen pt-28 pb-12 px-6">
        <div class="max-w-7xl mx-auto">
            <!-- Page Header -->
            <div class="mb-10 hero-content">
                <h1 class="text-4xl md:text-5xl font-space font-bold mb-4">
                    My <span class="gradient-text">Wishlist</span>
                </h1>
                <p class="text-gray-400">Items you've saved for later</p>
            </div>

            <% if(wishlist && wishlist.length > 0) { %>
            <!-- Wishlist Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <% wishlist.forEach(function(product){ %>
                <div class="stagger-item group">
                    <div class="glass rounded-2xl overflow-hidden card-hover">
                        <!-- Product Image -->
                        <div class="relative h-56 flex items-center justify-center overflow-hidden" style="background: <%= product.bgcolor %>;">
                            <button class="absolute top-4 right-4 w-10 h-10 rounded-full bg-red-500 text-white flex items-center justify-center hover:scale-110 transition-transform z-10">
                                <i class="ri-heart-fill"></i>
                            </button>
                            <% if(product.image) { %>
                            <img class="h-44 object-contain transform group-hover:scale-110 transition-transform duration-500" 
                                 src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                                 alt="<%= product.name %>">
                            <% } %>
                        </div>
                        <!-- Product Info -->
                        <div class="p-5" style="background: <%= product.panelcolor %>;">
                            <h3 class="font-semibold text-lg mb-2" style="color: <%= product.textcolor %>;"><%= product.name %></h3>
                            <div class="flex items-center justify-between">
                                <span class="text-xl font-bold" style="color: <%= product.textcolor %>;">â‚¹<%= product.price %></span>
                                <a href="/users/cart/add/<%= product._id %>" class="magnetic-btn px-4 py-2 rounded-full bg-white text-black text-sm font-medium hover:bg-accent hover:text-white transition-all duration-300">
                                    Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% } else { %>
            <!-- Empty State -->
            <div class="glass rounded-2xl p-12 text-center max-w-lg mx-auto">
                <div class="w-32 h-32 rounded-full bg-dark-card mx-auto flex items-center justify-center mb-6">
                    <i class="ri-heart-line text-5xl text-gray-600"></i>
                </div>
                <h3 class="text-2xl font-semibold text-gray-300 mb-2">Your wishlist is empty</h3>
                <p class="text-gray-500 mb-8">Save items you love by clicking the heart icon</p>
                <a href="/shop" class="magnetic-btn inline-flex items-center gap-2 px-8 py-4 rounded-full bg-gradient-to-r from-accent to-purple-500 text-white font-semibold hover:shadow-lg hover:shadow-accent/25 transition-all duration-300">
                    <i class="ri-shopping-bag-line"></i>
                    Explore Products
                </a>
            </div>
            <% } %>
        </div>
    </div>

<%- include('./partials/footer') %>
