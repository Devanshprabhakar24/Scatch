<%- include('./partials/header') %>

    <!-- Success Toast -->
    <% if(success && success.length > 0){ %>
        <div class="fixed top-24 left-1/2 -translate-x-1/2 z-50">
            <div class="glass px-6 py-4 rounded-2xl border border-green-500/30 flex items-center gap-3 animate-bounce">
                <div class="w-8 h-8 rounded-full bg-green-500/20 flex items-center justify-center">
                    <i class="ri-check-line text-green-400"></i>
                </div>
                <span class="text-green-400 font-medium"><%= success %></span>
            </div>
        </div>
    <% } %>

    <!-- Shop Section -->
    <div class="relative z-10 min-h-screen pt-28 pb-12 px-6">
        <div class="max-w-7xl mx-auto">
            <!-- Page Header -->
            <div class="text-center mb-12 hero-content">
                <h1 class="text-4xl md:text-5xl font-space font-bold mb-4">
                    Our <span class="gradient-text">Collection</span>
                </h1>
                <p class="text-gray-400 max-w-xl mx-auto">Discover our curated selection of premium bags and accessories</p>
            </div>

            <div class="flex flex-col lg:flex-row gap-8">
                <!-- Sidebar Filters -->
                <aside class="lg:w-72 flex-shrink-0">
                    <div class="glass rounded-2xl p-6 sticky top-28">
                        <!-- Sort By -->
                        <div class="mb-8">
                            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <i class="ri-sort-desc"></i> Sort By
                            </h3>
                            <form id="filterForm" action="/shop" method="GET">
                                <!-- Hidden inputs to preserve filters -->
                                <% if (filters && filters.category) { %><input type="hidden" name="category" value="<%= filters.category %>"><% } %>
                                <% if (filters && filters.minPrice) { %><input type="hidden" name="minPrice" value="<%= filters.minPrice %>"><% } %>
                                <% if (filters && filters.maxPrice) { %><input type="hidden" name="maxPrice" value="<%= filters.maxPrice %>"><% } %>
                                <% if (filters && filters.rating) { %><input type="hidden" name="rating" value="<%= filters.rating %>"><% } %>
                                
                                <select class="w-full bg-dark-card border border-dark-border rounded-xl px-4 py-3 text-white focus:border-accent focus:ring-1 focus:ring-accent outline-none transition-all cursor-pointer" name="sortby" onchange="this.form.submit()">
                                    <option value="popular" <%= sortby === 'popular' ? 'selected' : '' %>>üî• Popular</option>
                                    <option value="newest" <%= sortby === 'newest' ? 'selected' : '' %>>‚ú® Newest</option>
                                    <option value="lowprice" <%= sortby === 'lowprice' ? 'selected' : '' %>>üí∞ Price: Low to High</option>
                                    <option value="highprice" <%= sortby === 'highprice' ? 'selected' : '' %>>üíé Price: High to Low</option>
                                    <option value="rating" <%= sortby === 'rating' ? 'selected' : '' %>>‚≠ê Top Rated</option>
                                    <option value="bestselling" <%= sortby === 'bestselling' ? 'selected' : '' %>>üìà Best Selling</option>
                                </select>
                            </form>
                        </div>

                        <!-- Categories -->
                        <div class="mb-8">
                            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <i class="ri-folder-line"></i> Categories
                            </h3>
                            <div class="space-y-2 max-h-60 overflow-y-auto">
                                <a href="/shop?sortby=<%= sortby %>" class="flex items-center gap-3 px-4 py-3 rounded-xl <%= !filters?.category ? 'bg-dark-card' : 'hover:bg-dark-card' %> transition-all group">
                                    <div class="w-8 h-8 rounded-lg bg-accent/20 flex items-center justify-center">
                                        <i class="ri-apps-line text-accent"></i>
                                    </div>
                                    <span class="<%= !filters?.category ? 'text-white' : 'text-gray-300' %> group-hover:text-white transition-colors">All Products</span>
                                </a>
                                <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                                <% categories.forEach(cat => { %>
                                <a href="/shop?category=<%= cat %>&sortby=<%= sortby %>" class="flex items-center gap-3 px-4 py-3 rounded-xl <%= filters?.category === cat ? 'bg-dark-card' : 'hover:bg-dark-card' %> transition-all group">
                                    <div class="w-8 h-8 rounded-lg bg-purple-500/20 flex items-center justify-center">
                                        <i class="ri-price-tag-3-line text-purple-400"></i>
                                    </div>
                                    <span class="<%= filters?.category === cat ? 'text-white' : 'text-gray-300' %> group-hover:text-white transition-colors capitalize"><%= cat %></span>
                                </a>
                                <% }) %>
                                <% } %>
                                <a href="/shop?filter=discounted&sortby=<%= sortby %>" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-dark-card transition-all group">
                                    <div class="w-8 h-8 rounded-lg bg-pink-500/20 flex items-center justify-center">
                                        <i class="ri-percent-line text-pink-400"></i>
                                    </div>
                                    <span class="text-gray-300 group-hover:text-white transition-colors">On Sale</span>
                                </a>
                                <a href="/flash-sale" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-dark-card transition-all group">
                                    <div class="w-8 h-8 rounded-lg bg-orange-500/20 flex items-center justify-center animate-pulse">
                                        <i class="ri-flashlight-line text-orange-400"></i>
                                    </div>
                                    <span class="text-gray-300 group-hover:text-white transition-colors">Flash Sale</span>
                                </a>
                            </div>
                        </div>

                        <!-- Price Range -->
                        <div class="mb-8">
                            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <i class="ri-money-rupee-circle-line"></i> Price Range
                            </h3>
                            <form action="/shop" method="GET" class="space-y-3">
                                <input type="hidden" name="sortby" value="<%= sortby %>">
                                <% if (filters && filters.category) { %><input type="hidden" name="category" value="<%= filters.category %>"><% } %>
                                <div class="flex gap-2">
                                    <input type="number" name="minPrice" placeholder="Min" value="<%= filters?.minPrice || '' %>" 
                                        class="w-1/2 bg-dark-card border border-dark-border rounded-lg px-3 py-2 text-white text-sm">
                                    <input type="number" name="maxPrice" placeholder="Max" value="<%= filters?.maxPrice || '' %>" 
                                        class="w-1/2 bg-dark-card border border-dark-border rounded-lg px-3 py-2 text-white text-sm">
                                </div>
                                <button type="submit" class="w-full py-2 bg-accent/20 text-accent rounded-lg hover:bg-accent/30 transition-all text-sm font-medium">
                                    Apply Price Filter
                                </button>
                            </form>
                        </div>

                        <!-- Rating Filter -->
                        <div class="mb-8">
                            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <i class="ri-star-line"></i> Rating
                            </h3>
                            <div class="space-y-2">
                                <% for (let r = 4; r >= 1; r--) { %>
                                <a href="/shop?rating=<%= r %>&sortby=<%= sortby %><%= filters?.category ? '&category=' + filters.category : '' %>" 
                                    class="flex items-center gap-2 px-4 py-2 rounded-lg <%= parseInt(filters?.rating) === r ? 'bg-dark-card' : 'hover:bg-dark-card' %> transition-all">
                                    <div class="flex">
                                        <% for (let s = 1; s <= 5; s++) { %>
                                        <i class="ri-star-<%= s <= r ? 'fill text-yellow-400' : 'line text-gray-600' %> text-sm"></i>
                                        <% } %>
                                    </div>
                                    <span class="text-gray-400 text-sm">& up</span>
                                </a>
                                <% } %>
                            </div>
                        </div>

                        <!-- Clear Filters -->
                        <a href="/shop" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-red-500/10 transition-all group">
                            <div class="w-8 h-8 rounded-lg bg-red-500/20 flex items-center justify-center">
                                <i class="ri-close-line text-red-400"></i>
                            </div>
                            <span class="text-red-400 group-hover:text-red-300 transition-colors">Clear All Filters</span>
                        </a>
                    </div>
                </aside>

                <!-- Products Grid -->
                <main class="flex-1">
                    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
                        <% if(products && products.length > 0) { %>
                        <% products.forEach(function(product, index){ %>
                        <div class="stagger-item group">
                            <div class="glass rounded-2xl overflow-hidden card-hover">
                                <!-- Product Image -->
                                <a href="/product/<%= product._id %>" class="block relative h-56 flex items-center justify-center overflow-hidden" style="background: <%= product.bgcolor %>;">
                                    <% if(product.discount > 0) { %>
                                    <span class="absolute top-4 left-4 px-3 py-1.5 rounded-full bg-gradient-to-r from-red-500 to-pink-500 text-white text-xs font-bold shadow-lg z-10">
                                        -<%= product.discount %>%
                                    </span>
                                    <% } %>
                                    <% if(product.image) { %>
                                    <img class="h-44 object-contain transform group-hover:scale-110 transition-transform duration-500" 
                                         src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                                         alt="<%= product.name %>">
                                    <% } %>
                                    <!-- Quick Actions Overlay -->
                                    <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center gap-3">
                                        <span class="magnetic-btn px-5 py-2.5 rounded-full bg-white text-black font-semibold transform -translate-y-4 group-hover:translate-y-0 transition-all duration-300 flex items-center gap-2 text-sm">
                                            <i class="ri-eye-line"></i>
                                            View
                                        </span>
                                    </div>
                                </a>
                                <!-- Product Info -->
                                <div class="p-5" style="background: <%= product.panelcolor %>;">
                                    <a href="/product/<%= product._id %>" class="font-semibold text-lg mb-2 block hover:opacity-80 transition-opacity" style="color: <%= product.textcolor %>;"><%= product.name %></a>
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center gap-2">
                                            <span class="text-xl font-bold" style="color: <%= product.textcolor %>;">‚Çπ<%= product.price - (product.price * product.discount / 100) %></span>
                                            <% if(product.discount > 0) { %>
                                            <span class="line-through text-sm opacity-50" style="color: <%= product.textcolor %>;">‚Çπ<%= product.price %></span>
                                            <% } %>
                                        </div>
                                        <a href="/users/cart/add/<%= product._id %>" class="w-10 h-10 rounded-full bg-white/20 hover:bg-white hover:text-black flex items-center justify-center transition-all duration-300" style="color: <%= product.textcolor %>;">
                                            <i class="ri-add-line text-xl"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                        <% } else { %>
                        <!-- Empty State -->
                        <div class="col-span-full flex flex-col items-center justify-center py-20">
                            <div class="w-32 h-32 rounded-full bg-dark-card flex items-center justify-center mb-6">
                                <i class="ri-shopping-bag-line text-5xl text-gray-600"></i>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-400 mb-2">No products available</h3>
                            <p class="text-gray-500 mb-6">Check back later for new arrivals</p>
                            <a href="/" class="magnetic-btn px-6 py-3 rounded-full bg-gradient-to-r from-accent to-purple-500 text-white font-medium hover:shadow-lg hover:shadow-accent/25 transition-all duration-300">
                                Back to Home
                            </a>
                        </div>
                        <% } %>
                    </div>
                </main>
            </div>
        </div>
    </div>

    <!-- Shop Animation Script -->
    <script>
        gsap.from('.hero-content', {
            y: 40,
            opacity: 0,
            duration: 1,
            ease: 'power3.out',
            delay: 0.2
        });
        
        // Auto-hide success message
        setTimeout(() => {
            const toast = document.querySelector('.animate-bounce');
            if (toast) {
                gsap.to(toast, { opacity: 0, y: -20, duration: 0.5, onComplete: () => toast.remove() });
            }
        }, 3000);
    </script>

<%- include('./partials/footer') %>