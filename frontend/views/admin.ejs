<%- include('./partials/admin-header') %>

    <!-- Admin Dashboard Section -->
    <div class="relative z-10 min-h-screen pt-28 pb-12 px-6">
        <div class="max-w-7xl mx-auto">
            <!-- Page Header -->
            <div class="mb-10 hero-content">
                <h1 class="text-4xl md:text-5xl font-space font-bold mb-4">
                    My <span class="gradient-text">Products</span>
                </h1>
                <p class="text-gray-400">Manage your products and inventory</p>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="glass rounded-2xl p-6">
                    <div class="flex items-center gap-4">
                        <div class="w-14 h-14 rounded-2xl bg-accent/20 flex items-center justify-center">
                            <i class="ri-shopping-bag-line text-2xl text-accent"></i>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">Total Products</p>
                            <p class="text-3xl font-bold"><%= typeof products !== 'undefined' ? products.length : 0 %></p>
                        </div>
                    </div>
                </div>
                <div class="glass rounded-2xl p-6">
                    <div class="flex items-center gap-4">
                        <div class="w-14 h-14 rounded-2xl bg-green-500/20 flex items-center justify-center">
                            <i class="ri-percent-line text-2xl text-green-400"></i>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">Active Discounts</p>
                            <p class="text-3xl font-bold"><%= typeof products !== 'undefined' ? products.filter(p => p.discount > 0).length : 0 %></p>
                        </div>
                    </div>
                </div>
                <div class="glass rounded-2xl p-6">
                    <div class="flex items-center gap-4">
                        <div class="w-14 h-14 rounded-2xl bg-pink-500/20 flex items-center justify-center">
                            <i class="ri-archive-line text-2xl text-pink-400"></i>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">In Stock</p>
                            <p class="text-3xl font-bold"><%= typeof products !== 'undefined' ? products.filter(p => p.inStock !== false).length : 0 %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="glass rounded-2xl p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-semibold flex items-center gap-2">
                        <i class="ri-shopping-bag-3-line text-accent"></i>
                        All Products
                    </h2>
                    <a href="/owners/product/create" class="magnetic-btn px-4 py-2 rounded-xl bg-gradient-to-r from-accent to-purple-500 text-white font-medium text-sm hover:shadow-lg hover:shadow-accent/25 transition-all duration-300 flex items-center gap-2">
                        <i class="ri-add-line"></i>
                        Add Product
                    </a>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
                    <% if(typeof products !== 'undefined' && products.length > 0) { %>
                    <% products.forEach(function(product) { %>
                    <div class="group">
                        <div class="glass rounded-2xl overflow-hidden card-hover">
                            <div class="relative h-56 flex items-center justify-center" style="background: <%= product.bgcolor %>;">
                                <% if(product.discount > 0) { %>
                                <span class="absolute top-4 left-4 px-3 py-1.5 rounded-full bg-gradient-to-r from-red-500 to-pink-500 text-white text-xs font-bold shadow-lg">
                                    -<%= product.discount %>%
                                </span>
                                <% } %>
                                <% if(product.image) { %>
                                <img class="h-44 object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                                <% } %>
                            </div>
                            <div class="p-5" style="background: <%= product.panelcolor %>;">
                                <h3 class="font-semibold text-lg mb-2" style="color: <%= product.textcolor %>;"><%= product.name %></h3>
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-2">
                                        <span class="text-xl font-bold" style="color: <%= product.textcolor %>;">₹<%= product.price - (product.price * product.discount / 100) %></span>
                                        <% if(product.discount > 0) { %>
                                        <span class="line-through text-sm opacity-50" style="color: <%= product.textcolor %>;">₹<%= product.price %></span>
                                        <% } %>
                                    </div>
                                    <div class="flex gap-2">
                                        <a href="/owners/product/edit/<%= product._id %>" class="w-9 h-9 rounded-full bg-accent/20 hover:bg-accent text-accent hover:text-white flex items-center justify-center transition-all duration-300">
                                            <i class="ri-edit-line"></i>
                                        </a>
                                        <a href="/owners/product/delete/<%= product._id %>" class="w-9 h-9 rounded-full bg-red-500/20 hover:bg-red-500 text-red-400 hover:text-white flex items-center justify-center transition-all duration-300" onclick="return confirm('Are you sure you want to delete this product?')">
                                            <i class="ri-delete-bin-6-line"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <% } %>

                    <!-- Add Product Card -->
                    <a href="/owners/product/create" class="group">
                        <div class="glass rounded-2xl overflow-hidden card-hover h-full min-h-[320px] flex flex-col items-center justify-center border-2 border-dashed border-dark-border hover:border-accent transition-all duration-300">
                            <div class="w-20 h-20 rounded-full bg-dark-card flex items-center justify-center mb-4 group-hover:bg-accent/20 transition-all duration-300">
                                <i class="ri-add-line text-4xl text-gray-500 group-hover:text-accent transition-colors"></i>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-400 group-hover:text-white transition-colors">Add New Product</h3>
                            <p class="text-sm text-gray-600">Click to create</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Animation Script -->
    <script>
        gsap.from('.hero-content', {
            y: 40,
            opacity: 0,
            duration: 1,
            ease: 'power3.out',
            delay: 0.2
        });
    </script>

<%- include('./partials/footer') %>