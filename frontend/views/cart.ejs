<%- include('./partials/header') %>

    <!-- Cart Section -->
    <div class="relative z-10 min-h-screen pt-28 pb-12 px-6">
        <div class="max-w-7xl mx-auto">
            <!-- Page Header -->
            <div class="mb-10 hero-content">
                <h1 class="text-4xl md:text-5xl font-space font-bold mb-4">
                    Your <span class="gradient-text">Cart</span>
                </h1>
                <p class="text-gray-400">Review your items before checkout</p>
            </div>

            <div class="flex flex-col lg:flex-row gap-8">
                <!-- Cart Items -->
                <div class="flex-1">
                    <% if(cart && cart.length > 0) { %>
                        <div class="space-y-4">
                        <% cart.forEach(function(product, index){ %>
                            <div class="stagger-item glass rounded-2xl overflow-hidden card-hover">
                                <div class="flex flex-col sm:flex-row">
                                    <!-- Product Image -->
                                    <div class="w-full sm:w-48 h-48 flex items-center justify-center flex-shrink-0" style="background: <%= product.bgcolor %>;">
                                        <% if(product.image) { %>
                                        <img class="h-36 object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                                        <% } %>
                                    </div>
                                    <!-- Product Details -->
                                    <div class="flex-1 p-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4" style="background: <%= product.panelcolor %>;">
                                        <div>
                                            <h3 class="text-xl font-semibold mb-2" style="color: <%= product.textcolor %>;"><%= product.name %></h3>
                                            <div class="flex items-center gap-2">
                                                <span class="text-2xl font-bold" style="color: <%= product.textcolor %>;">₹<%= product.price %></span>
                                            </div>
                                        </div>
                                        <a href="/users/cart/remove/<%= product._id %>" class="magnetic-btn w-12 h-12 rounded-full bg-red-500/20 hover:bg-red-500 text-red-400 hover:text-white flex items-center justify-center transition-all duration-300">
                                            <i class="ri-delete-bin-6-line text-xl"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                        </div>
                    <% } else { %>
                        <!-- Empty Cart -->
                        <div class="glass rounded-2xl p-12 text-center">
                            <div class="w-32 h-32 rounded-full bg-dark-card mx-auto flex items-center justify-center mb-6">
                                <i class="ri-shopping-cart-line text-5xl text-gray-600"></i>
                            </div>
                            <h3 class="text-2xl font-semibold text-gray-300 mb-2">Your cart is empty</h3>
                            <p class="text-gray-500 mb-8">Looks like you haven't added anything to your cart yet</p>
                            <a href="/shop" class="magnetic-btn inline-flex items-center gap-2 px-8 py-4 rounded-full bg-gradient-to-r from-accent to-purple-500 text-white font-semibold hover:shadow-lg hover:shadow-accent/25 transition-all duration-300">
                                <i class="ri-shopping-bag-line"></i>
                                Start Shopping
                            </a>
                        </div>
                    <% } %>
                </div>

                <!-- Order Summary -->
                <% if(cart && cart.length > 0) { %>
                <aside class="lg:w-96 flex-shrink-0">
                    <div class="glass rounded-2xl p-6 sticky top-28">
                        <h3 class="text-xl font-space font-semibold mb-6 flex items-center gap-2">
                            <i class="ri-file-list-3-line text-accent"></i>
                            Order Summary
                        </h3>
                        
                        <div class="space-y-4 mb-6">
                            <div class="flex justify-between text-gray-400">
                                <span>Total MRP</span>
                                <span class="text-white">₹<%= totalPrice %></span>
                            </div>
                            <div class="flex justify-between text-gray-400">
                                <span>Discount on MRP</span>
                                <span class="text-green-400">- ₹<%= totalDiscount %></span>
                            </div>
                            <div class="flex justify-between text-gray-400">
                                <span>Platform Fee</span>
                                <span class="text-white">₹20</span>
                            </div>
                            <div class="flex justify-between text-gray-400">
                                <span>Shipping Fee</span>
                                <span class="text-green-400 flex items-center gap-1">
                                    <i class="ri-truck-line"></i> FREE
                                </span>
                            </div>
                        </div>
                        
                        <div class="border-t border-dark-border pt-4 mb-6">
                            <div class="flex justify-between items-center">
                                <span class="text-lg font-semibold">Total Amount</span>
                                <span class="text-2xl font-bold gradient-text">₹<%= finalAmount %></span>
                            </div>
                            <p class="text-green-400 text-sm mt-1 flex items-center gap-1">
                                <i class="ri-checkbox-circle-fill"></i>
                                You're saving ₹<%= totalDiscount %> on this order
                            </p>
                        </div>
                        
                        <button class="magnetic-btn w-full py-4 rounded-xl bg-gradient-to-r from-accent to-purple-500 text-white font-semibold text-lg hover:shadow-lg hover:shadow-accent/25 transition-all duration-300 flex items-center justify-center gap-2 animate-pulse-glow" onclick="window.location.href='/users/checkout'">
                            <i class="ri-secure-payment-line"></i>
                            Proceed to Checkout
                        </button>
                        
                        <div class="mt-6 flex items-center justify-center gap-4 text-gray-500 text-sm">
                            <div class="flex items-center gap-1">
                                <i class="ri-shield-check-line text-green-400"></i>
                                Secure Payment
                            </div>
                            <div class="flex items-center gap-1">
                                <i class="ri-truck-line text-accent"></i>
                                Fast Delivery
                            </div>
                        </div>
                    </div>
                </aside>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Cart Animation Script -->
    <script>
        gsap.from('.hero-content', {
            y: 40,
            opacity: 0,
            duration: 1,
            ease: 'power3.out',
            delay: 0.2
        });
    </script>

<%- include('./partials/footer') %>