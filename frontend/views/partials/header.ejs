                    </a>
                    <!-- Cart -->
                    <a href="/users/cart" class="relative group">
                        <div class="w-10 h-10 rounded-full bg-dark-card border border-dark-border flex items-center justify-center group-hover:border-accent transition-all duration-300">
                            <i class="ri-shopping-bag-3-line text-lg text-gray-300 group-hover:text-accent transition-colors"></i>
                        </div>
                    </a>
                    <!-- Profile Dropdown -->
                    <div class="relative group">
                        <button class="w-10 h-10 rounded-full bg-gradient-to-br from-accent to-purple-500 flex items-center justify-center font-bold text-sm">
                            <i class="ri-user-line"></i>
                        </button>
                        <div class="absolute right-0 top-full mt-2 w-48 glass rounded-xl p-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300">
                            <a href="/users/profile" class="flex items-center gap-2 px-4 py-2.5 rounded-lg hover:bg-dark-card transition-all text-sm">
                                <i class="ri-user-line text-accent"></i> My Profile
                            </a>
                            <a href="/users/orders" class="flex items-center gap-2 px-4 py-2.5 rounded-lg hover:bg-dark-card transition-all text-sm">
                                <i class="ri-shopping-bag-3-line text-accent"></i> Orders
                            </a>
                            <a href="/users/wishlist" class="flex items-center gap-2 px-4 py-2.5 rounded-lg hover:bg-dark-card transition-all text-sm">
                                <i class="ri-heart-line text-accent"></i> Wishlist
                            </a>
                            <div class="border-t border-dark-border my-2"></div>
                            <a href="/users/logout" class="flex items-center gap-2 px-4 py-2.5 rounded-lg hover:bg-red-500/10 transition-all text-sm text-red-400">
                                <i class="ri-logout-box-line"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>