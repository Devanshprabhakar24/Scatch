                <div class="hidden md:flex gap-8 items-center">
                    <a href="/shop" class="nav-link text-gray-300 hover:text-white transition-colors font-medium">Shop</a>
                    <a href="/about" class="nav-link text-gray-300 hover:text-white transition-colors font-medium">About</a>
                    <a href="/contact" class="nav-link text-gray-300 hover:text-white transition-colors font-medium">Contact</a>
                </div>
                <div class="flex gap-4 items-center">
                    <!-- Search -->
                    <a href="/search" class="w-10 h-10 rounded-full bg-dark-card border border-dark-border flex items-center justify-center hover:border-accent transition-all duration-300">
                        <i class="ri-search-line text-gray-300 hover:text-accent transition-colors"></i>
                    </a>
                    <!-- Wishlist -->
                    <a href="/users/wishlist" class="w-10 h-10 rounded-full bg-dark-card border border-dark-border flex items-center justify-center hover:border-accent transition-all duration-300 hidden sm:flex">
