<%- include('./partials/header') %>

    <!-- Error Toast -->
    <% if(typeof error !== 'undefined' && error && error.length > 0){ %>
        <div class="fixed top-24 left-1/2 -translate-x-1/2 z-50 animate-bounce">
            <div class="glass px-6 py-4 rounded-2xl border border-red-500/30 flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-red-500/20 flex items-center justify-center">
                    <i class="ri-error-warning-line text-red-400"></i>
                </div>
                <span class="text-red-400 font-medium"><%= error %></span>
            </div>
        </div>
    <% } %>

    <!-- Admin Login Section -->
    <div class="relative z-10 min-h-screen flex items-center justify-center px-6">
        <div class="max-w-md w-full">
            <div class="text-center mb-8 hero-content">
                <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-accent to-purple-500 flex items-center justify-center mx-auto mb-6">
                    <i class="ri-admin-line text-4xl"></i>
                </div>
                <h1 class="text-3xl font-space font-bold mb-2">Admin Portal</h1>
                <p class="text-gray-400">Access the owner dashboard</p>
            </div>

            <div class="glass rounded-3xl p-8 card-hover">
                <form autocomplete="off" action="/owners/login" method="post" class="space-y-5">
                    <div class="relative group">
                        <i class="ri-mail-line absolute left-4 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-accent transition-colors"></i>
                        <input class="w-full bg-dark-card border border-dark-border rounded-xl px-4 py-3.5 pl-12 text-white placeholder-gray-500 focus:border-accent focus:ring-1 focus:ring-accent outline-none transition-all" type="email" placeholder="Admin Email" name="email" required>
                    </div>
                    <div class="relative group">
                        <i class="ri-lock-password-line absolute left-4 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-accent transition-colors"></i>
                        <input class="w-full bg-dark-card border border-dark-border rounded-xl px-4 py-3.5 pl-12 text-white placeholder-gray-500 focus:border-accent focus:ring-1 focus:ring-accent outline-none transition-all" type="password" placeholder="Password" name="password" required>
                    </div>
                    <button type="submit" class="magnetic-btn w-full py-4 rounded-xl bg-gradient-to-r from-accent to-purple-500 text-white font-semibold text-lg hover:shadow-lg hover:shadow-accent/25 transition-all duration-300 flex items-center justify-center gap-2">
                        <i class="ri-login-box-line"></i>
                        Access Dashboard
                    </button>
                </form>
                <div class="mt-6 pt-6 border-t border-dark-border">
                    <p class="text-center text-gray-500 text-sm">
                        <i class="ri-shield-check-line text-green-400 mr-1"></i>
                        Secure admin authentication
                    </p>
                </div>
            </div>

            <p class="text-center text-gray-500 text-sm mt-8">
                <a href="/" class="text-accent hover:text-accent-light transition-colors">
                    <i class="ri-arrow-left-line mr-1"></i>Back to main site
                </a>
            </p>
        </div>
    </div>

    <!-- Animation Script -->
    <script>
        gsap.from('.hero-content', {
            y: 40,
            opacity: 0,
            duration: 1,
            ease: 'power3.out',
            delay: 0.2
        });
        
        // Auto-hide error message
        setTimeout(() => {
            const toast = document.querySelector('.animate-bounce');
            if (toast) {
                gsap.to(toast, { opacity: 0, y: -20, duration: 0.5, onComplete: () => toast.remove() });
            }
        }, 3000);
    </script>

<%- include('./partials/footer') %>