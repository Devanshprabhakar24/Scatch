<%- include('./partials/header') %>

    <!-- Order Success Section -->
    <div class="relative z-10 min-h-screen pt-28 pb-12 px-6">
        <div class="max-w-2xl mx-auto text-center">
            <!-- Simple Success Icon -->
            <div class="mb-8">
                <div class="w-24 h-24 rounded-full bg-green-500/20 flex items-center justify-center mx-auto mb-4">
                    <i class="ri-checkbox-circle-fill text-6xl text-green-500"></i>
                </div>
            </div>

            <div class="glass rounded-3xl p-8 md:p-12">
                <h1 class="text-4xl md:text-5xl font-space font-bold mb-4">
                    <span class="gradient-text">Order Placed!</span>
                </h1>
                
                <p class="text-gray-400 text-lg mb-8">
                    Thank you for your purchase. Your order has been confirmed and will be shipped soon.
                </p>

                <!-- Order Details Card -->
                <div class="bg-dark-card rounded-2xl p-6 mb-8 text-left">
                    <div class="flex flex-wrap items-center justify-between mb-4 pb-4 border-b border-dark-border gap-4">
                        <div>
                            <p class="text-gray-500 text-sm">Order ID</p>
                            <p class="font-mono text-lg font-semibold text-accent"><%= order.orderId || order._id %></p>
                        </div>
                        <div class="text-right">
                            <p class="text-gray-500 text-sm">Order Date</p>
                            <p class="font-medium"><%= new Date(order.createdAt).toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' }) %></p>
                        </div>
                    </div>

                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <h4 class="text-gray-500 text-sm mb-2 flex items-center gap-2">
                                <i class="ri-map-pin-line"></i>
                                Delivery Address
                            </h4>
                            <p class="text-white font-medium"><%= order.shippingAddress.fullname %></p>
                            <p class="text-gray-400 text-sm">
                                <%= order.shippingAddress.address %><br>
                                <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> - <%= order.shippingAddress.pincode %><br>
                                Phone: <%= order.shippingAddress.phone %>
                            </p>
                        </div>
                        <div>
                            <h4 class="text-gray-500 text-sm mb-2 flex items-center gap-2">
                                <i class="ri-bank-card-line"></i>
                                Payment Details
                            </h4>
                            <p class="text-white font-medium">
                                <%= order.paymentMethod === 'cod' ? 'Cash on Delivery' : 'Online Payment' %>
                            </p>
                            <p class="text-gray-400 text-sm">
                                Status: <span class="text-yellow-400 capitalize"><%= order.paymentStatus %></span>
                            </p>
                            <p class="text-2xl font-bold gradient-text mt-2">₹<%= order.finalAmount %></p>
                        </div>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="bg-dark-card rounded-2xl p-6 mb-8 text-left">
                    <h4 class="text-gray-500 text-sm mb-4 flex items-center gap-2">
                        <i class="ri-shopping-bag-line"></i>
                        Order Items (<%= order.products.length %>)
                    </h4>
                    <div class="space-y-4">
                        <% order.products.forEach(function(item) { %>
                        <div class="flex items-center gap-4 p-3 rounded-xl" style="background: rgba(20, 20, 20, 0.8);">
                            <div class="w-16 h-16 rounded-lg flex items-center justify-center flex-shrink-0" style="background: <%= item.bgcolor || '#1a1a1a' %>;">
                                <% if(item.image) { %>
                                <img class="w-12 h-12 object-contain" 
                                     src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" 
                                     alt="<%= item.name %>">
                                <% } else { %>
                                <i class="ri-shopping-bag-line text-2xl text-gray-600"></i>
                                <% } %>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-medium"><%= item.name %></h4>
                                <p class="text-accent">₹<%= item.price - (item.discount || 0) %></p>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>

                <!-- Order Timeline -->
                <div class="bg-dark-card rounded-2xl p-6 mb-8 text-left">
                    <h4 class="text-gray-500 text-sm mb-4 flex items-center gap-2">
                        <i class="ri-time-line"></i>
                        Order Status
                    </h4>
                    <div class="flex justify-between mt-3 text-sm">
                        <div class="text-center flex-1">
                            <div class="w-10 h-10 rounded-full bg-green-500 flex items-center justify-center mx-auto mb-2">
                                <i class="ri-check-line text-white text-lg"></i>
                            </div>
                            <span class="text-green-400 text-xs">Confirmed</span>
                        </div>
                        <div class="text-center flex-1">
                            <div class="w-10 h-10 rounded-full bg-dark-border flex items-center justify-center mx-auto mb-2">
                                <i class="ri-box-3-line text-gray-500 text-lg"></i>
                            </div>
                            <span class="text-gray-500 text-xs">Processing</span>
                        </div>
                        <div class="text-center flex-1">
                            <div class="w-10 h-10 rounded-full bg-dark-border flex items-center justify-center mx-auto mb-2">
                                <i class="ri-truck-line text-gray-500 text-lg"></i>
                            </div>
                            <span class="text-gray-500 text-xs">Shipped</span>
                        </div>
                        <div class="text-center flex-1">
                            <div class="w-10 h-10 rounded-full bg-dark-border flex items-center justify-center mx-auto mb-2">
                                <i class="ri-home-smile-line text-gray-500 text-lg"></i>
                            </div>
                            <span class="text-gray-500 text-xs">Delivered</span>
                        </div>
                    </div>
                    <p class="text-center text-gray-400 mt-6">
                        <i class="ri-calendar-line"></i>
                        Expected by <strong class="text-white"><%= new Date(Date.now() + 7 * 24 * 60 * 60 * 1000).toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' }) %></strong>
                    </p>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="/users/orders" class="flex-1 py-4 rounded-xl bg-gradient-to-r from-accent to-purple-500 text-white font-semibold hover:opacity-90 transition-all flex items-center justify-center gap-2">
                        <i class="ri-file-list-3-line"></i>
                        View My Orders
                    </a>
                    <a href="/shop" class="flex-1 py-4 rounded-xl bg-dark-card border border-dark-border text-white font-semibold hover:border-accent transition-all flex items-center justify-center gap-2">
                        <i class="ri-shopping-bag-line"></i>
                        Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>

<%- include('./partials/footer') %>
