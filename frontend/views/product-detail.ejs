<%- include('./partials/header') %>

    <!-- Product Detail Section -->
    <div class="relative z-10 min-h-screen pt-28 pb-12 px-6">
        <div class="max-w-7xl mx-auto">
            <!-- Breadcrumb -->
            <nav class="mb-8 flex items-center gap-2 text-sm text-gray-500">
                <a href="/" class="hover:text-accent transition-colors">Home</a>
                <i class="ri-arrow-right-s-line"></i>
                <a href="/shop" class="hover:text-accent transition-colors">Shop</a>
                <i class="ri-arrow-right-s-line"></i>
                <span class="text-white"><%= product.name %></span>
            </nav>

            <div class="flex flex-col lg:flex-row gap-12">
                <!-- Product Images -->
                <div class="lg:w-1/2">
                    <div class="glass rounded-3xl overflow-hidden">
                        <div class="relative h-[500px] flex items-center justify-center" style="background: <%= product.bgcolor %>;">
                            <% if(product.discount > 0) { %>
                            <span class="absolute top-6 left-6 px-4 py-2 rounded-full bg-gradient-to-r from-red-500 to-pink-500 text-white text-sm font-bold shadow-lg">
                                -<%= product.discount %>% OFF
                            </span>
                            <% } %>
                            <% if(product.image) { %>
                            <img class="max-h-[400px] object-contain product-image" 
                                 src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                                 alt="<%= product.name %>">
                            <% } %>
                        </div>
                    </div>
                    <!-- Thumbnail Gallery -->
                    <div class="flex gap-4 mt-4">
                        <div class="w-20 h-20 rounded-xl overflow-hidden cursor-pointer border-2 border-accent" style="background: <%= product.bgcolor %>;">
                            <% if(product.image) { %>
                            <img class="w-full h-full object-contain p-2" 
                                 src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                                 alt="">
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Product Info -->
                <div class="lg:w-1/2">
                    <div class="stagger-item">
                        <!-- Badge -->
                        <% if(product.inStock !== false && (product.stockQuantity === undefined || product.stockQuantity > 0)) { %>
                        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-green-500/20 text-green-400 text-sm mb-4">
                            <i class="ri-checkbox-circle-fill"></i>
                            In Stock<% if(product.stockQuantity && product.stockQuantity <= 10) { %> - Only <%= product.stockQuantity %> left<% } %>
                        </div>
                        <% } else { %>
                        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-red-500/20 text-red-400 text-sm mb-4">
                            <i class="ri-close-circle-fill"></i>
                            Out of Stock
                        </div>
                        <% } %>

                        <h1 class="text-4xl md:text-5xl font-space font-bold mb-4"><%= product.name %></h1>
                        
                        <!-- Price -->
                        <div class="flex items-baseline gap-4 mb-8">
                            <span class="text-4xl font-bold gradient-text">₹<%= product.price - (product.price * product.discount / 100) %></span>
                            <% if(product.discount > 0) { %>
                            <span class="text-xl text-gray-500 line-through">₹<%= product.price %></span>
                            <span class="px-3 py-1 rounded-full bg-green-500/20 text-green-400 text-sm">
                                Save ₹<%= (product.price * product.discount / 100) %>
                            </span>
                            <% } %>
                        </div>

                        <!-- Description -->
                        <p class="text-gray-400 mb-8 leading-relaxed">
                            <%= product.description || 'Experience premium quality with this exceptional product. Crafted with attention to detail and designed for those who appreciate the finer things in life. Perfect for everyday use or special occasions.' %>
                        </p>

                        <!-- Features -->
                        <div class="grid grid-cols-2 gap-4 mb-8">
                            <% if(product.freeShipping !== false) { %>
                            <div class="flex items-center gap-3 glass rounded-xl p-4">
                                <div class="w-10 h-10 rounded-lg bg-accent/20 flex items-center justify-center">
                                    <i class="ri-truck-line text-accent"></i>
                                </div>
                                <div>
                                    <h4 class="font-medium text-sm">Free Shipping</h4>
                                    <p class="text-xs text-gray-500">On orders over ₹<%= product.freeShippingMinOrder || 500 %></p>
                                </div>
                            </div>
                            <% } %>
                            <% if(product.warrantyYears && product.warrantyYears > 0) { %>
                            <div class="flex items-center gap-3 glass rounded-xl p-4">
                                <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
                                    <i class="ri-shield-check-line text-green-400"></i>
                                </div>
                                <div>
                                    <h4 class="font-medium text-sm">Warranty</h4>
                                    <p class="text-xs text-gray-500"><%= product.warrantyYears || 1 %> Year guarantee</p>
                                </div>
                            </div>
                            <% } %>
                            <% if(product.returnDays && product.returnDays > 0) { %>
                            <div class="flex items-center gap-3 glass rounded-xl p-4">
                                <div class="w-10 h-10 rounded-lg bg-pink-500/20 flex items-center justify-center">
                                    <i class="ri-exchange-line text-pink-400"></i>
                                </div>
                                <div>
                                    <h4 class="font-medium text-sm">Easy Returns</h4>
                                    <p class="text-xs text-gray-500"><%= product.returnDays || 30 %> day return policy</p>
                                </div>
                            </div>
                            <% } %>
                            <div class="flex items-center gap-3 glass rounded-xl p-4">
                                <div class="w-10 h-10 rounded-lg bg-orange-500/20 flex items-center justify-center">
                                    <i class="ri-time-line text-orange-400"></i>
                                </div>
                                <div>
                                    <h4 class="font-medium text-sm">Fast Delivery</h4>
                                    <p class="text-xs text-gray-500"><%= product.deliveryDays || '5-7' %> business days</p>
                                </div>
                            </div>
                        </div>

                        <!-- Quantity Selector -->
                        <div class="flex items-center gap-6 mb-8">
                            <span class="text-gray-400">Quantity:</span>
                            <div class="flex items-center gap-3">
                                <button class="qty-btn w-10 h-10 rounded-xl bg-dark-card border border-dark-border flex items-center justify-center hover:border-accent transition-all">
                                    <i class="ri-subtract-line"></i>
                                </button>
                                <span class="w-12 text-center text-xl font-semibold qty-value">1</span>
                                <button class="qty-btn w-10 h-10 rounded-xl bg-dark-card border border-dark-border flex items-center justify-center hover:border-accent transition-all">
                                    <i class="ri-add-line"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="/users/cart/add/<%= product._id %>" class="magnetic-btn flex-1 py-4 rounded-xl bg-gradient-to-r from-accent to-purple-500 text-white font-semibold text-lg hover:shadow-lg hover:shadow-accent/25 transition-all duration-300 flex items-center justify-center gap-2">
                                <i class="ri-shopping-bag-line"></i>
                                Add to Cart
                            </a>
                            <% if (typeof isInWishlist !== 'undefined' && isInWishlist) { %>
                            <a href="/users/wishlist/remove/<%= product._id %>" class="magnetic-btn flex-1 py-4 rounded-xl bg-pink-500/20 border border-pink-500/50 text-pink-400 font-semibold text-lg hover:bg-pink-500 hover:text-white transition-all duration-300 flex items-center justify-center gap-2">
                                <i class="ri-heart-fill"></i>
                                In Wishlist
                            </a>
                            <% } else { %>
                            <a href="/users/wishlist/add/<%= product._id %>" class="magnetic-btn flex-1 py-4 rounded-xl bg-dark-card border border-dark-border text-white font-semibold text-lg hover:border-accent transition-all duration-300 flex items-center justify-center gap-2">
                                <i class="ri-heart-line"></i>
                                Add to Wishlist
                            </a>
                            <% } %>
                        </div>

                        <!-- Size Selection (if available) -->
                        <% if (product.sizes && product.sizes.length > 0) { %>
                        <div class="mt-8">
                            <span class="text-gray-400 block mb-3">Size:</span>
                            <div class="flex flex-wrap gap-3">
                                <% product.sizes.forEach((size, i) => { %>
                                <button class="size-btn px-4 py-2 rounded-xl bg-dark-card border border-dark-border hover:border-accent transition-all <%= i === 0 ? 'border-accent' : '' %>">
                                    <%= size %>
                                </button>
                                <% }) %>
                            </div>
                        </div>
                        <% } %>

                        <!-- Color Selection (if available) -->
                        <% if (product.colors && product.colors.length > 0) { %>
                        <div class="mt-6">
                            <span class="text-gray-400 block mb-3">Color:</span>
                            <div class="flex flex-wrap gap-3">
                                <% product.colors.forEach((color, i) => { %>
                                <button class="color-btn w-10 h-10 rounded-full border-2 <%= i === 0 ? 'border-accent' : 'border-dark-border' %> hover:border-accent transition-all" 
                                    style="background-color: <%= color %>" title="<%= color %>">
                                </button>
                                <% }) %>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Product Tabs -->
            <div class="mt-20">
                <div class="flex gap-8 border-b border-dark-border mb-8">
                    <button class="tab-btn active pb-4 text-lg font-medium border-b-2 border-accent text-white" data-tab="description">Description</button>
                    <button class="tab-btn pb-4 text-lg font-medium border-b-2 border-transparent text-gray-500 hover:text-white transition-colors" data-tab="reviews">Reviews (<%= product.reviews ? product.reviews.length : 0 %>)</button>
                    <button class="tab-btn pb-4 text-lg font-medium border-b-2 border-transparent text-gray-500 hover:text-white transition-colors" data-tab="shipping">Shipping Info</button>
                </div>

                <!-- Description Tab -->
                <div class="tab-content active" id="description">
                    <div class="glass rounded-2xl p-8">
                        <h3 class="text-xl font-semibold mb-4">Product Description</h3>
                        <p class="text-gray-400 leading-relaxed mb-4">
                            <%= product.description || 'Introducing our premium collection piece - designed with meticulous attention to detail and crafted from the finest materials. This product represents the perfect blend of style, functionality, and durability.' %>
                        </p>
                        <ul class="space-y-2 text-gray-400">
                            <% const features = product.features && product.features.length > 0 ? product.features : ['Premium quality materials', 'Ergonomic design for comfort', 'Water-resistant coating', 'Multiple compartments for organization']; %>
                            <% features.forEach(function(feature) { %>
                            <li class="flex items-center gap-2">
                                <i class="ri-check-line text-green-400"></i>
                                <%= feature %>
                            </li>
                            <% }); %>
                        </ul>
                        
                        <% if (product.category) { %>
                        <div class="mt-6 pt-6 border-t border-dark-border">
                            <span class="text-gray-500 text-sm">Category:</span>
                            <a href="/shop?category=<%= product.category %>" class="text-accent hover:text-accent-light capitalize ml-2"><%= product.category %></a>
                        </div>
                        <% } %>
                        
                        <% if (product.tags && product.tags.length > 0) { %>
                        <div class="mt-4 flex flex-wrap gap-2">
                            <% product.tags.forEach(tag => { %>
                            <a href="/search?q=<%= tag %>" class="px-3 py-1 rounded-full bg-dark-card text-gray-400 text-sm hover:text-accent transition-colors">#<%= tag %></a>
                            <% }) %>
                        </div>
                        <% } %>
                    </div>
                </div>

                <!-- Reviews Tab -->
                <div class="tab-content hidden" id="reviews">
                    <div class="glass rounded-2xl p-8">
                        <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4 mb-8">
                            <div>
                                <h3 class="text-xl font-semibold">Customer Reviews</h3>
                                <% if (product.averageRating) { %>
                                <div class="flex items-center gap-2 mt-2">
                                    <div class="flex text-yellow-400">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="ri-star-<%= i <= Math.round(product.averageRating) ? 'fill' : 'line' %>"></i>
                                        <% } %>
                                    </div>
                                    <span class="text-gray-400"><%= product.averageRating.toFixed(1) %> out of 5 (<%= product.reviews?.length || 0 %> reviews)</span>
                                </div>
                                <% } %>
                            </div>
                            <button onclick="openReviewModal()" class="magnetic-btn px-6 py-3 rounded-xl bg-accent text-white font-medium hover:shadow-lg hover:shadow-accent/25 transition-all">
                                Write a Review
                            </button>
                        </div>
                        
                        <!-- Reviews List -->
                        <div class="space-y-6">
                            <% if (product.reviews && product.reviews.length > 0) { %>
                            <% product.reviews.forEach(review => { %>
                            <div class="border-b border-dark-border pb-6">
                                <div class="flex items-center gap-4 mb-3">
                                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-accent to-purple-500 flex items-center justify-center font-bold">
                                        <%= review.user?.fullname?.charAt(0) || 'U' %>
                                    </div>
                                    <div>
                                        <h4 class="font-medium"><%= review.user?.fullname || 'Anonymous' %></h4>
                                        <div class="flex items-center gap-2 text-sm text-gray-500">
                                            <div class="flex text-yellow-400">
                                                <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="ri-star-<%= i <= review.rating ? 'fill' : 'line' %>"></i>
                                                <% } %>
                                            </div>
                                            <span>• <%= new Date(review.createdAt).toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' }) %></span>
                                        </div>
                                    </div>
                                </div>
                                <p class="text-gray-400"><%= review.comment %></p>
                            </div>
                            <% }) %>
                            <% } else { %>
                            <div class="text-center py-8 text-gray-500">
                                <i class="ri-chat-3-line text-4xl mb-3 block"></i>
                                <p>No reviews yet. Be the first to review this product!</p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Shipping Tab -->
                <div class="tab-content hidden" id="shipping">
                    <div class="glass rounded-2xl p-8">
                        <h3 class="text-xl font-semibold mb-4">Shipping Information</h3>
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <h4 class="font-medium mb-2 flex items-center gap-2">
                                    <i class="ri-truck-line text-accent"></i>
                                    Delivery Options
                                </h4>
                                <ul class="space-y-2 text-gray-400 text-sm">
                                    <li>Standard Delivery: <%= product.deliveryDays || '5-7' %> business days</li>
                                    <li>Express Delivery: <%= product.expressDeliveryDays || '2-3' %> business days</li>
                                    <li>Same Day Delivery: Available in select cities</li>
                                </ul>
                            </div>
                            <div>
                                <h4 class="font-medium mb-2 flex items-center gap-2">
                                    <i class="ri-exchange-line text-pink-400"></i>
                                    Return Policy
                                </h4>
                                <ul class="space-y-2 text-gray-400 text-sm">
                                    <li><%= product.returnDays || 30 %>-day easy returns</li>
                                    <li>Free returns on all orders</li>
                                    <li>Full refund or exchange available</li>
                                </ul>
                            </div>
                            <% if(product.freeShipping !== false) { %>
                            <div>
                                <h4 class="font-medium mb-2 flex items-center gap-2">
                                    <i class="ri-gift-line text-green-400"></i>
                                    Free Shipping
                                </h4>
                                <ul class="space-y-2 text-gray-400 text-sm">
                                    <li>Free shipping on orders over ₹<%= product.freeShippingMinOrder || 500 %></li>
                                    <li>No hidden charges</li>
                                </ul>
                            </div>
                            <% } %>
                            <% if(product.warrantyYears && product.warrantyYears > 0) { %>
                            <div>
                                <h4 class="font-medium mb-2 flex items-center gap-2">
                                    <i class="ri-shield-check-line text-orange-400"></i>
                                    Warranty
                                </h4>
                                <ul class="space-y-2 text-gray-400 text-sm">
                                    <li><%= product.warrantyYears || 1 %> Year manufacturer warranty</li>
                                    <li>Covers manufacturing defects</li>
                                </ul>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Related Products -->
            <% if (typeof relatedProducts !== 'undefined' && relatedProducts && relatedProducts.length > 0) { %>
            <div class="mt-20">
                <h2 class="text-2xl font-bold mb-8">Related Products</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    <% relatedProducts.forEach(prod => { %>
                    <a href="/product/<%= prod._id %>" class="glass rounded-2xl overflow-hidden card-hover group">
                        <div class="h-40 flex items-center justify-center" style="background: <%= prod.bgcolor %>;">
                            <% if (prod.image) { %>
                            <img src="data:image/jpeg;base64,<%= prod.image.toString('base64') %>" alt="<%= prod.name %>" class="h-32 object-contain group-hover:scale-110 transition-transform">
                            <% } %>
                        </div>
                        <div class="p-4" style="background: <%= prod.panelcolor %>; color: <%= prod.textcolor %>;">
                            <h3 class="font-medium truncate"><%= prod.name %></h3>
                            <p class="font-bold">₹<%= prod.price - (prod.price * prod.discount / 100) %></p>
                        </div>
                    </a>
                    <% }) %>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Write Review Modal -->
    <div id="reviewModal" class="fixed inset-0 bg-black/50 flex items-center justify-center hidden z-50">
        <div class="glass rounded-2xl p-6 w-full max-w-md mx-4">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-bold">Write a Review</h2>
                <button onclick="closeReviewModal()" class="p-2 hover:bg-dark-card rounded-full">
                    <i class="ri-close-line text-xl"></i>
                </button>
            </div>
            
            <form action="/users/review/<%= product._id %>" method="POST" class="space-y-4">
                <div>
                    <label class="text-sm text-gray-500 block mb-2">Rating</label>
                    <div class="flex gap-2" id="ratingStars">
                        <% for (let i = 1; i <= 5; i++) { %>
                        <button type="button" onclick="setRating(<%= i %>)" class="text-3xl text-gray-600 hover:text-yellow-400 transition-colors rating-star">
                            <i class="ri-star-line"></i>
                        </button>
                        <% } %>
                    </div>
                    <input type="hidden" name="rating" id="ratingInput" value="5" required>
                </div>
                
                <div>
                    <label class="text-sm text-gray-500 block mb-2">Your Review</label>
                    <textarea name="comment" rows="4" required minlength="10" placeholder="Share your experience with this product..."
                        class="w-full bg-dark-card border border-dark-border rounded-xl px-4 py-3 text-white focus:border-accent outline-none resize-none"></textarea>
                </div>
                
                <button type="submit" class="w-full py-3 rounded-xl bg-gradient-to-r from-accent to-purple-500 text-white font-medium">
                    Submit Review
                </button>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        // GSAP Animations
        gsap.from('.product-image', {
            scale: 0.8,
            opacity: 0,
            duration: 1,
            ease: 'power3.out'
        });

        // Tab switching
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.tab-btn').forEach(b => {
                    b.classList.remove('active', 'border-accent', 'text-white');
                    b.classList.add('border-transparent', 'text-gray-500');
                });
                btn.classList.add('active', 'border-accent', 'text-white');
                btn.classList.remove('border-transparent', 'text-gray-500');
                
                document.querySelectorAll('.tab-content').forEach(c => c.classList.add('hidden'));
                document.getElementById(btn.dataset.tab).classList.remove('hidden');
            });
        });

        // Quantity buttons
        let qty = 1;
        document.querySelectorAll('.qty-btn').forEach((btn, i) => {
            btn.addEventListener('click', () => {
                if (i === 0 && qty > 1) qty--;
                if (i === 1) qty++;
                document.querySelector('.qty-value').textContent = qty;
            });
        });

        // Size selection
        document.querySelectorAll('.size-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.size-btn').forEach(b => b.classList.remove('border-accent'));
                btn.classList.add('border-accent');
            });
        });

        // Color selection
        document.querySelectorAll('.color-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.color-btn').forEach(b => b.classList.remove('border-accent'));
                btn.classList.add('border-accent');
            });
        });

        // Review modal
        function openReviewModal() {
            document.getElementById('reviewModal').classList.remove('hidden');
        }

        function closeReviewModal() {
            document.getElementById('reviewModal').classList.add('hidden');
        }

        function setRating(rating) {
            document.getElementById('ratingInput').value = rating;
            document.querySelectorAll('.rating-star').forEach((star, i) => {
                const icon = star.querySelector('i');
                if (i < rating) {
                    icon.classList.remove('ri-star-line');
                    icon.classList.add('ri-star-fill');
                    star.classList.add('text-yellow-400');
                    star.classList.remove('text-gray-600');
                } else {
                    icon.classList.remove('ri-star-fill');
                    icon.classList.add('ri-star-line');
                    star.classList.remove('text-yellow-400');
                    star.classList.add('text-gray-600');
                }
            });
        }
        
        // Set initial rating
        setRating(5);
    </script>

<%- include('./partials/footer') %>
