<%- include('./partials/admin-header') %>

    <!-- Order Detail Section -->
    <div class="relative z-10 min-h-screen pt-28 pb-12 px-6">
        <div class="max-w-4xl mx-auto">
            <!-- Back Button -->
            <a href="/owners/orders" class="inline-flex items-center gap-2 text-gray-400 hover:text-white mb-6 transition-colors">
                <i class="ri-arrow-left-line"></i>
                Back to Orders
            </a>

            <!-- Order Header -->
            <div class="glass rounded-2xl p-6 mb-6">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                    <div>
                        <h1 class="text-2xl font-bold mb-2">Order #<%= order._id.toString().slice(-8).toUpperCase() %></h1>
                        <p class="text-gray-400 text-sm">
                            <i class="ri-time-line mr-1"></i>
                            Placed on <%= new Date(order.createdAt).toLocaleDateString('en-IN', { day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                        </p>
                    </div>
                    <div class="flex items-center gap-4">
                        <% 
                            let statusColor = 'gray';
                            if(order.orderStatus === 'pending') statusColor = 'yellow';
                            else if(order.orderStatus === 'confirmed') statusColor = 'yellow';
                            else if(order.orderStatus === 'processing') statusColor = 'blue';
                            else if(order.orderStatus === 'shipped') statusColor = 'purple';
                            else if(order.orderStatus === 'delivered') statusColor = 'green';
                            else if(order.orderStatus === 'cancelled') statusColor = 'red';
                        %>
                        <span class="px-4 py-2 rounded-full text-sm font-medium bg-<%= statusColor %>-500/20 text-<%= statusColor %>-400 capitalize">
                            <%= order.orderStatus || 'pending' %>
                        </span>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Order Items -->
                <div class="lg:col-span-2">
                    <div class="glass rounded-2xl p-6">
                        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
                            <i class="ri-shopping-bag-line text-accent"></i>
                            Order Items (<%= order.products.length %>)
                        </h2>
                        <div class="space-y-4">
                            <% order.products.forEach(function(item) { %>
                            <div class="flex items-center gap-4 p-4 bg-dark-card rounded-xl">
                                <div class="w-20 h-20 rounded-xl flex items-center justify-center flex-shrink-0 overflow-hidden" style="background: <%= item.bgcolor || '#1f2937' %>;">
                                    <% if(item.image) { %>
                                    <img src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>" class="h-16 object-contain">
                                    <% } else if(item.product && item.product.image) { %>
                                    <img src="data:image/jpeg;base64,<%= item.product.image.toString('base64') %>" alt="<%= item.product.name %>" class="h-16 object-contain">
                                    <% } else { %>
                                    <i class="ri-shopping-bag-line text-2xl text-gray-500"></i>
                                    <% } %>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h3 class="font-medium truncate"><%= item.name || (item.product ? item.product.name : 'Product Unavailable') %></h3>
                                    <p class="text-gray-400 text-sm">
                                        ₹<%= item.price || (item.product ? item.product.price : 0) %> × 1
                                        <% if(item.discount > 0) { %>
                                        <span class="text-green-400 ml-2">-<%= item.discount %>%</span>
                                        <% } %>
                                    </p>
                                </div>
                                <div class="text-right">
                                    <% 
                                        let itemPrice = item.price || (item.product ? item.product.price : 0);
                                        let itemDiscount = item.discount || 0;
                                        let finalPrice = itemPrice - (itemPrice * itemDiscount / 100);
                                    %>
                                    <p class="font-semibold text-accent">₹<%= finalPrice.toLocaleString() %></p>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <!-- Order Summary & Customer Info -->
                <div class="space-y-6">
                    <!-- Customer Info -->
                    <div class="glass rounded-2xl p-6">
                        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
                            <i class="ri-user-line text-accent"></i>
                            Customer
                        </h2>
                        <div class="space-y-3">
                            <div>
                                <p class="text-gray-400 text-sm">Name</p>
                                <p class="font-medium"><%= order.user ? order.user.fullname : 'Unknown' %></p>
                            </div>
                            <div>
                                <p class="text-gray-400 text-sm">Email</p>
                                <p class="font-medium"><%= order.user ? order.user.email : 'Unknown' %></p>
                            </div>
                            <% if(order.user && order.user.contact) { %>
                            <div>
                                <p class="text-gray-400 text-sm">Contact</p>
                                <p class="font-medium"><%= order.user.contact %></p>
                            </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Shipping Address -->
                    <div class="glass rounded-2xl p-6">
                        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
                            <i class="ri-map-pin-line text-accent"></i>
                            Shipping Address
                        </h2>
                        <div class="text-gray-300 leading-relaxed space-y-1">
                            <% if(order.shippingAddress) { %>
                            <p class="font-medium text-white"><%= order.shippingAddress.fullname %></p>
                            <p><%= order.shippingAddress.phone %></p>
                            <p><%= order.shippingAddress.address %></p>
                            <p><%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> - <%= order.shippingAddress.pincode %></p>
                            <% } else { %>
                            <p>No address provided</p>
                            <% } %>
                        </div>
                    </div>

                    <!-- Order Total -->
                    <div class="glass rounded-2xl p-6">
                        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
                            <i class="ri-money-rupee-circle-line text-accent"></i>
                            Order Total
                        </h2>
                        <div class="space-y-2">
                            <div class="flex justify-between text-gray-400">
                                <span>Subtotal</span>
                                <span>₹<%= order.totalAmount ? order.totalAmount.toLocaleString() : '0' %></span>
                            </div>
                            <div class="flex justify-between text-gray-400">
                                <span>Discount</span>
                                <span class="text-green-400">-₹<%= order.totalDiscount ? order.totalDiscount.toLocaleString() : '0' %></span>
                            </div>
                            <div class="flex justify-between text-gray-400">
                                <span>Platform Fee</span>
                                <span>₹<%= order.platformFee || 20 %></span>
                            </div>
                            <div class="flex justify-between text-gray-400">
                                <span>Shipping</span>
                                <span class="text-green-400"><%= order.shippingFee > 0 ? '₹' + order.shippingFee : 'Free' %></span>
                            </div>
                            <div class="border-t border-dark-border my-3"></div>
                            <div class="flex justify-between text-lg font-bold">
                                <span>Total</span>
                                <span class="text-accent">₹<%= order.finalAmount ? order.finalAmount.toLocaleString() : '0' %></span>
                            </div>
                        </div>
                    </div>

                    <!-- Update Status -->
                    <div class="glass rounded-2xl p-6">
                        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
                            <i class="ri-refresh-line text-accent"></i>
                            Update Status
                        </h2>
                        <form action="/owners/order/<%= order._id %>/status" method="POST">
                            <select name="orderStatus" class="w-full px-4 py-3 rounded-xl bg-dark-card border border-dark-border text-white focus:border-accent focus:outline-none mb-4">
                                <option value="pending" <%= order.orderStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="confirmed" <%= order.orderStatus === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                                <option value="processing" <%= order.orderStatus === 'processing' ? 'selected' : '' %>>Processing</option>
                                <option value="shipped" <%= order.orderStatus === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                <option value="delivered" <%= order.orderStatus === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                <option value="cancelled" <%= order.orderStatus === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                            </select>
                            <button type="submit" class="w-full py-3 rounded-xl bg-gradient-to-r from-accent to-purple-500 text-white font-medium hover:shadow-lg hover:shadow-accent/25 transition-all">
                                Update Status
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('./partials/footer') %>
