<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Details - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <%- include('partials/admin-header') %>
    
    <div class="max-w-6xl mx-auto px-4 py-8">
        <a href="/owners/users" class="text-blue-500 hover:text-blue-600 inline-flex items-center mb-6">
            <i class="ri-arrow-left-line mr-2"></i>Back to Customers
        </a>
        
        <!-- Customer Info Card -->
        <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div class="flex items-center gap-4">
                    <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white text-2xl font-bold">
                        <%= user.fullname.charAt(0).toUpperCase() %>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-800"><%= user.fullname %></h1>
                        <p class="text-gray-500"><%= user.email %></p>
                        <% if (user.contact) { %>
                        <p class="text-gray-500"><%= user.contact %></p>
                        <% } %>
                    </div>
                </div>
                
                <div class="flex items-center gap-3">
                    <% if (user.isBlocked) { %>
                        <span class="px-4 py-2 bg-red-100 text-red-700 rounded-lg font-medium">Blocked</span>
                    <% } %>
                    <button onclick="toggleBlock()" 
                        class="px-4 py-2 <%= user.isBlocked ? 'bg-green-500 hover:bg-green-600' : 'bg-red-500 hover:bg-red-600' %> text-white rounded-lg font-medium">
                        <%= user.isBlocked ? 'Unblock User' : 'Block User' %>
                    </button>
                </div>
            </div>
            
            <div class="border-t mt-6 pt-6">
                <p class="text-sm text-gray-500">
                    Member since: <%= new Date(user.createdAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </p>
                <% if (user.referralCode) { %>
                <p class="text-sm text-gray-500">Referral Code: <span class="font-mono font-medium"><%= user.referralCode %></span></p>
                <% } %>
            </div>
        </div>
        
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div class="bg-white rounded-xl shadow-sm p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                        <i class="ri-shopping-bag-line text-xl text-blue-600"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Total Orders</p>
                        <p class="text-2xl font-bold"><%= stats.totalOrders %></p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                        <i class="ri-money-rupee-circle-line text-xl text-green-600"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Total Spent</p>
                        <p class="text-2xl font-bold">₹<%= stats.totalSpent.toLocaleString() %></p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
                        <i class="ri-close-circle-line text-xl text-red-600"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Cancelled Orders</p>
                        <p class="text-2xl font-bold"><%= stats.cancelledOrders %></p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Saved Addresses -->
        <% if (user.addresses && user.addresses.length > 0) { %>
        <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
            <h2 class="text-xl font-bold mb-4">Saved Addresses</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% user.addresses.forEach(address => { %>
                <div class="border rounded-lg p-4">
                    <div class="flex items-center gap-2 mb-2">
                        <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded capitalize"><%= address.type %></span>
                        <% if (address.isDefault) { %>
                        <span class="px-2 py-1 bg-green-100 text-green-700 text-xs rounded">Default</span>
                        <% } %>
                    </div>
                    <p class="font-medium"><%= address.fullname %></p>
                    <p class="text-gray-600 text-sm"><%= address.phone %></p>
                    <p class="text-gray-600 text-sm"><%= address.address %>, <%= address.city %>, <%= address.state %> - <%= address.pincode %></p>
                </div>
                <% }) %>
            </div>
        </div>
        <% } %>
        
        <!-- Wishlist -->
        <% if (user.wishlist && user.wishlist.length > 0) { %>
        <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
            <h2 class="text-xl font-bold mb-4">Wishlist (<%= user.wishlist.length %> items)</h2>
            <div class="flex flex-wrap gap-3">
                <% user.wishlist.forEach(product => { %>
                <div class="px-4 py-2 bg-gray-50 rounded-lg">
                    <span class="font-medium"><%= product.name %></span>
                    <span class="text-gray-500 ml-2">₹<%= product.price %></span>
                </div>
                <% }) %>
            </div>
        </div>
        <% } %>
        
        <!-- Order History -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-xl font-bold mb-4">Order History</h2>
            
            <% if (orders.length === 0) { %>
            <p class="text-gray-500 text-center py-8">No orders yet</p>
            <% } else { %>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-600">Order ID</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-600">Date</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-600">Items</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-600">Amount</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-600">Status</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-600">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                        <tr class="border-t">
                            <td class="px-4 py-3 font-mono text-sm"><%= order.orderId %></td>
                            <td class="px-4 py-3 text-sm"><%= new Date(order.createdAt).toLocaleDateString() %></td>
                            <td class="px-4 py-3 text-sm"><%= order.products.length %> item(s)</td>
                            <td class="px-4 py-3 font-medium">₹<%= order.finalAmount %></td>
                            <td class="px-4 py-3">
                                <% const statusColors = {
                                    pending: 'bg-yellow-100 text-yellow-700',
                                    confirmed: 'bg-blue-100 text-blue-700',
                                    processing: 'bg-purple-100 text-purple-700',
                                    shipped: 'bg-cyan-100 text-cyan-700',
                                    delivered: 'bg-green-100 text-green-700',
                                    cancelled: 'bg-red-100 text-red-700'
                                }; %>
                                <span class="px-3 py-1 rounded-full text-xs font-medium capitalize <%= statusColors[order.orderStatus] %>">
                                    <%= order.orderStatus %>
                                </span>
                            </td>
                            <td class="px-4 py-3">
                                <a href="/owners/order/<%= order._id %>" class="text-blue-500 hover:text-blue-600 text-sm">
                                    View Details
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } %>
        </div>
    </div>
    
    <script>
        async function toggleBlock() {
            if (!confirm('Are you sure you want to <%= user.isBlocked ? "unblock" : "block" %> this user?')) return;
            
            try {
                const res = await fetch('/owners/user/<%= user._id %>/block', { method: 'POST' });
                const data = await res.json();
                if (data.success) {
                    location.reload();
                }
            } catch (err) {
                alert('Error updating user status');
            }
        }
    </script>
</body>
</html>